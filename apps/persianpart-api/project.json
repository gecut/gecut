{
  "name": "persianpart-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/persianpart-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/persianpart-api",
        "format": ["esm"],
        "bundle": true,
        "main": "apps/persianpart-api/src/index.ts",
        "tsConfig": "apps/persianpart-api/tsconfig.app.json",
        "assets": [],
        "generatePackageJson": true,
        "esbuildOptions": {
          "target": "node19",
          "sourcemap": true,
          "outExtension": {
            ".js": ".mjs"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "minify": true,
          "generateLockfile": true
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "configurations": {
        "development": {
          "commands": [
            "nx run persianpart-api:build --watch",
            "nodemon dist/apps/persianpart-api/index.mjs"
          ],
          "parallel": true
        },
        "production": {
          "command": "node dist/apps/persianpart-api/index.mjs"
        }
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/persianpart-api/**/*.ts"],
        "fix": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/persianpart-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build --build-arg PACKAGE_SOURCE=dist/apps/persianpart-api -f cloud/api/Dockerfile . -t persianpart-api"
    }
  },
  "tags": []
}
