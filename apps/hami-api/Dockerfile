# Build the docker image with `npx nx docker-build hami-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t hami-api`.
FROM docker.io/node:19-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system hami-api && \
          adduser --system -G hami-api hami-api

COPY dist/apps/hami-api hami-api
RUN chown -R hami-api:hami-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix hami-api --omit=dev -f install

CMD [ "node", "hami-api/index.mjs" ]
