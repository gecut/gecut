{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "module": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gecut/common/*": ["packages/ui/common/src/*"],
      "@gecut/form-builder": ["packages/ui/form-builder/src"],
      "@gecut/form-validator": ["packages/ui/form-validator/src"],
      "@gecut/logger": ["packages/core/logger/src"],
      "@gecut/lorem": ["packages/core/lorem/src"],
      "@gecut/mixins": ["packages/ui/mixins/src"],
      "@gecut/types": ["packages/core/types/src"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
